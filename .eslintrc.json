{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "overrides": [
    {
      "files": "*.vue",
      "rules": {
        "indent": "off"
      }
    }
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "indent": ["error", "tab"],
    "no-console": "off",
    "semi": [2, "never"],
    "sort-keys": ["warn", "asc"],
    "vue/no-v-html": "off",
    "vue/script-indent": ["error", 3, { "baseIndent": 1 }]
  }
}
